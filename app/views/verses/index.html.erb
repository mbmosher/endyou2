<h1 class="text-center">Every Time I End You</h1>

<% if flash[:notice] %>
   <div class="alert alert-danger"><%= flash[:notice] %></div>
 <% end %>

<table class="table">
  <tr>
    <th class="text-center">Jar</th>
    <th>Verse</th>
    <th>Map</th>
  </tr>
 
  <% @verses.each do |verse| %>
    <tr>
      <th class="span3" align="center"><%= link_to(image_tag(verse.image), image_path(verse.imagelink))%></td>
      <td class="span6"><%=simple_format h verse.text %> </td>
	  <th class="span3"><%= link_to(image_tag(verse.map, title: verse.latitude.to_s + ', ' + verse.longitude.to_s), verse.maplink)%></td>
    </tr>
  <% end %>
</table>

<br>

<% if @showUnlocked == true %>

<%= form_for :verse, :url => { :action => "unlock" } do |f| %>
  <div class="form-inline offset3">
    <strong>Enter Verse Unlock Code:</strong> <% f.label :code %> <%= f.text_field :code %> <%= f.submit "Unlock", class: 'btn' %>
  </div>
<% end %>

<% end %>

